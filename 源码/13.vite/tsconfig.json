{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "types": [
      "vite/client",
      "jest"
    ],
    "baseUrl": "./",
    "paths": {
      "@": [
        "./src"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "tests/**/*.spec.ts",
    "tests/**/*.spec.js"
  ]
}